<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m">
	<ActionSheet placement="Auto" showCancelButton="true" title="{i18n>ProcessDetailsSettings}">
		<buttons>
			<Button press="onPressProcessForward" icon="sap-icon://forward" text="{i18n>ProcessDetailsProcessForward}" visible="{path: 'ProcessDetailsData>/', formatter: '.formatter.isVisibleProcessForward'}"/>
			<Button press="onPressProcessCancel" icon="sap-icon://sys-cancel" text="{i18n>ProcessDetailsProcessCancel}" visible="{path: 'ProcessDetailsData>/', formatter: '.formatter.isVisibleProcessCancel'}"/>
		</buttons>
	</ActionSheet>
</core:FragmentDefinition>